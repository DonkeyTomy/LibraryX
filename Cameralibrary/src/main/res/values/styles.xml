<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 隐藏状态栏 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Launcher" parent = "AppTheme">
    </style>

    <style name="CameraBtnStyle" parent="WrapAll">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="TvCameraSetting" parent="WrapAll">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="CameraSettingRadio" parent="WrapAll">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_camera_setting_radio</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <style name="WhiteTextView" parent="WrapAll">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogBtn" parent="WhiteTextView">
    </style>

    <style name="BtnCameraRightLight" parent="WrapAll">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CameraSettingTextView" parent="WhiteTextView">
        <item name="android:textSize">@dimen/tv_size_setting_pop</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
</resources>
