<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="false"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/bg_item_gray_line_click"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@android:id/icon"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@android:id/title"
        android:duplicateParentState="true"
        android:textColor="@color/color_item_gray_line_click"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_goneMarginStart="0dp"
        android:textSize="@dimen/tv_size_preference_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical|start"
        app:layout_constraintStart_toEndOf="@android:id/icon"
        app:layout_constraintEnd_toStartOf="@android:id/widget_frame"
         />
    <TextView
        app:layout_constraintTop_toBottomOf="@android:id/title"
        app:layout_constraintHorizontal_bias="0.15"
        android:id="@android:id/summary"
        style="@style/SettingMainTv"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@android:id/widget_frame"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.9"
        />
</androidx.constraintlayout.widget.ConstraintLayout>